@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
 
<h2>List of roles</h2>
<table class="table">
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a class="btn btn-primary" asp-action="Create">Add role</a>
<a class="btn btn-info" asp-action="UserList">List of users</a>
<a class="btn btn-secondary" asp-controller="Account" asp-action="CreateRecipe">Add recipe</a>
